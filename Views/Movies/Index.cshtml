<h2>Movies</h2>
@if (Model.Movies.Count == 0)
{
    <text>No Movies available.</text>
}
else
{
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th class="col">Movie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>@movie.Name</td>
            </tr>
        }

    </tbody>
</table>
}



